model Post {
  id          String   @id @default(dbgenerated("nanoid()"))
  title       String   @unique
  description String?
  body        String
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  author      Author   @relation(fields: [authorId], references: [id])
  authorId    String
}
